{
  "manifest_version": 3,
  "name": "Smart Autofill",
  "version": "1.0",
  "description": "Autofill forms using GPT-4",
  "permissions": [
    "scripting", 
    "activeTab", 
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["defaultData.js", "content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_title": "Smart Form Filler"
  },
  "options_page": "options.html"
}
  